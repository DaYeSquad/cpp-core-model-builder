<module>
  <group name='task'>
    <class name='Task'>
      <manager name='TaskManager'>
        <save singular='true'/>
        <save plural='true'/>
        <fetch singular='true' by='task_id'/>
        <fetch plural='true'/>
        <delete singular='true'/>
        <delete plural='true'/>
        <delete singular='true' by='task_id'/>
        <delete singular='true' by='task_id,project_id'/>
      </manager>
      <variable name='task_id' type='string' json_path='task_id' sql_flag='primary_key'/>
      <variable name='title' type='string' json_path='title'/>
      <variable name='project_id' type='string' json_path='project/project_id'/>
      <variable name='archived' type='bool' json_path='is_archived'/>
      <variable name='completed' type='bool' json_path='is_completed'/>
      <variable name='deleted' type='bool' json_path='is_deleted'/>
      <variable name='permission' type='int' json_path='permission'/>
      <variable name='position' type='int' json_path='position'/>
      <variable name='created_at' type='int' json_path='created_at'/>
      <variable name='phone_number' type='string' json_path='mobile'/>
      <variable name='created_by' type='string' json_path='created_by'/>
      <variable name='tags' type='string' json_path='tags'/> <!-- 数组咋解析啊 -->
    </class>
  </group>
</module>
